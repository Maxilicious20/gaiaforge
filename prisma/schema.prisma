datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// User bleibt, aber ohne Credits
model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String?   @unique
  emailVerified      DateTime?
  image              String?
  
  // NEU: Hytale Profil Infos
  username           String?   @unique // Der eigene Username
  lastUsernameChange DateTime? // Damit wir die 3 Tage Sperre prüfen können
  backgroundImage    String    @default("hero-bg.jpg") // Das gewählte Hintergrundbild

  // Ban System
  isBanned           Boolean   @default(false)
  banReason          String?
  bannedAt           DateTime?

  accounts      Account[]
  sessions      Session[]
  mods          Mod[]     @relation("UserMods")
  comments      Comment[]
  votes         Vote[]
}

model Mod {
  id          String   @id @default(cuid())
  title       String
  description String
  downloadUrl String   // Link zum Download (z.B. Google Drive Link oder Discord Upload)
  imageUrl    String?  // Ein Bild für die Mod
  
  category    String   // z.B. "Magic", "Tech", "Biomes"
  
  published   Boolean  @default(false) // Standard: Nicht öffentlich (Wartet auf dich)
  createdAt   DateTime @default(now())
  
  authorId    String
  author      User     @relation("UserMods", fields: [authorId], references: [id])

  comments    Comment[]
  votes       Vote[]
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  modId     String
  mod       Mod      @relation(fields: [modId], references: [id], onDelete: Cascade)
}

enum VoteType {
  LIKE
  DISLIKE
}

model Vote {
  id     String   @id @default(cuid())
  type   VoteType
  
  userId String
  user   User     @relation(fields: [userId], references: [id])
  
  modId  String
  mod    Mod      @relation(fields: [modId], references: [id], onDelete: Cascade)

  @@unique([userId, modId]) // Ein User kann pro Mod nur einmal voten
}

// Standard NextAuth Tabellen (nötig für Login)
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}